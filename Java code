int a = 30; int b = 50; int c = 20; int maximum;
//if - else statements
maximum = Math.max(a, b);
int result = Math.max(maximum, c);
System.out.println(maximum);
System.out.println(result);

int minimum = Math.min(a, b);
System.out.println(minimum);
int secondResult = Math.min(minimum, c);
System.out.println(secondResult);

//sqrt
double root = Math.sqrt(a);

System.out.printf("%.2f\n", Math.floor(root));
System.out.println(Math.sqrt(a));

//absolute values
int d = -50;
System.out.println(Math.abs(d));

//random
double myage = 22.76;
System.out.println((int) myage);
int min = 100;
int max = 999;

//2009735224

System.out.println("Random value in int from "+min+" to "+max+ ":");
int random_int = (int)Math.floor(Math.random()*(max-min+1)+min);
System.out.println(random_int);

//boolean
int votingAge = 18;
int age = 14;
System.out.println(age >= votingAge);

