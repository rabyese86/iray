public static void main(String[] args) {
    String greeting = "Hello World.";
   System.out.println(greeting);
   System.out.println("Musa Ajibade");
   System.out.print("I live in Nigeria");
   System.out.print("I love my country");
   // Comments
    //I'm discussing comments
    /**
     * hgvasbanklhkvjdasgcvb
     * bb hubca sknja
     *
     * HCHJASB JSN
     */
    System.out.println("I'm of voting age");
    System.out.print("Tested and trusted");

    //Data types and variables
    /**
     * name - string
     * age - integer
     * complexion - string
     * weight - double, float, big decimal
     * height - double, float, big decimal
     * address - string
     * educational qualification - string
     * gender - string, char
     * boolean
     */

    String firstname;
    firstname = "Musa";
    String lastname;
    lastname = "Muhammad";
    int age;
    age = 85;
    String complexion;
    complexion = "dark";
    double weight;
    weight = 25;
    float height;
    height = 1.90f;
    String gender;
    gender = "male";
    //printing out the name of the Nigerian president
    //concatenation

    String fullname = firstname + " " + lastname;
    System.out.println(fullname + " is " + age + " years old");
    String message = firstname + " is currently the President of Nigeria. " + firstname + " had pnce been the head of state in 1979." + firstname + " was alos " +
            "minister of petroleum at the time";
    System.out.println(message);



}

